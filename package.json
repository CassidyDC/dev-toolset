{
	"name": "@cassidydc/dev-toolset",
	"version": "1.0.0",
	"description": "WordPress development configuration files for enforcing coding standards",
	"keywords": [
		"eslint",
		"formatter",
		"linter",
		"prettier",
		"stylelint",
		"wordpress"
	],
	"homepage": "https://github.com/CassidyDC/dev-toolset/blob/main/README.md",
	"author": {
		"name": "Jacob Cassidy",
		"email": "jacob@cassidydc.com",
		"url": "https://cassidydc.com"
	},
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/CassidyDC/dev-toolset"
	},
	"bugs": {
		"url": "https://github.com/CassidyDC/dev-toolset/issues"
	},
	"devDependencies": {
		"@cassidydc/eslint-plugin-wordpress": "^1.1.2",
		"@cassidydc/stylelint-config-w3c-order": "^1.2.1",
		"@eslint/js": "^9.33.0",
		"@stylistic/stylelint-config": "^3.0.1",
		"@wordpress/prettier-config": "^4.28.0",
		"eslint": "^9.33.0",
		"globals": "^16.3.0",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "npm:wp-prettier@^3.0.3",
		"prettier-plugin-multiline-arrays": "^4.0.3",
		"stylelint": "^16.23.1",
		"stylelint-config-standard": "^39.0.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-declaration-block-no-ignored-properties": "^2.8.0",
		"stylelint-high-performance-animation": "^1.11.0",
		"stylelint-no-indistinguishable-colors": "^2.3.1",
		"stylelint-order": "^7.0.0"
	},
	"overrides": {
		"@wordpress/babel-preset-default": {
			"@babel/runtime": "^7.28.2"
		}
	},
	"scripts": {
		"check": "npx prettier . --check",
		"format": "npx prettier . --write",
		"lint:docs": "npx markdownlint-cli2 \"**/*.md\"",
		"lint:docs:fix": "npx markdownlint-cli2 \"**/*.md\" --fix",
		"lint:scripts": "npx eslint",
		"lint:scripts:fix": "npx eslint --fix",
		"lint:styles": "npx stylelint \"**/*.{css,scss}\"",
		"lint:styles:fix": "npx stylelint \"**/*.{css,scss}\" --fix"
	}
}
